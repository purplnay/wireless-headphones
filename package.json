{
  "name": "wireless-headphones",
  "version": "0.1.0",
  "description": "Use your phone as wireless headphones for your computer.",
  "main": "dist/main.js",
  "repository": "https://github.com/purplnay/wireless-headphones.git",
  "author": "Nay <nay@purpltag.com>",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/main.ts src/index.html --public-url ./ --target electron",
    "watch": "parcel watch src/main.ts src/index.html --public-url ./ --target electron",
    "start": "electron ."
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.34",
    "@types/react-dom": "^17.0.2",
    "husky": "^5.1.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "electron": "^12.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
